<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widgetRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/widget_background"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/moodEmoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="âœ¨"
            android:textSize="38sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/moodTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Feeling"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/widget_text_primary" />

            <TextView
                android:id="@+id/moodMeta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shared just now"
                android:textSize="12sp"
                android:textColor="@color/widget_text_secondary" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/moodNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/widget_text_primary"
        android:textSize="15sp"
        android:visibility="gone"
        android:lineSpacingExtra="2dp" />

    <ImageView
        android:id="@+id/moodImage"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="12dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:visibility="gone"
        android:contentDescription="@string/widget_image_content_description" />
</LinearLayout>
